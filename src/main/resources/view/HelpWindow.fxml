<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.Scene?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.effect.DropShadow?>
<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         title="who-are-you-again? docs" minWidth="500" minHeight="600">
  <icons>
    <Image url="@/images/icons8-info-32.png" />
  </icons>
  <scene>
    <Scene stylesheets="@HelpWindow.css">
      <VBox styleClass="root-container">
        <VBox styleClass="header-container">
          <HBox styleClass="title-container">
            <Label text="who-are-you-again?" styleClass="app-title"/>
            <Label text="v1.6" styleClass="version-label"/>
          </HBox>
          <Label text="docs" styleClass="docs-label"/>
        </VBox>

        <ScrollPane fx:id="scrollPane" styleClass="scroll-pane">
          <!-- Help Content -->
          <VBox fx:id="helpContent" styleClass="help-content">

            <!-- Opening Header -->
            <VBox alignment="TOP_CENTER" style="-fx-padding: 80px 0px;">
              <Text text="Hey! How can we help?" styleClass="big-header"/>
              <Text text="If you're new, let's help you get set up!" styleClass="sub-header"/>
            </VBox>


            <!-- Commands -->
            <VBox styleClass="section" spacing="5">
              <Label text="Commands" styleClass="section-header"/>

              <!-- Command Format Notes Block -->
              <HBox spacing="10" styleClass="paragraph-container" style="-fx-padding: 15px;">

                <!-- Info Icon -->
                <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                  <Image url="@/images/icons8-info-24.png"/>
                </ImageView>

                <!-- Format of Commands Block -->
                <VBox spacing="8">
                  <Text text="Notes about command format: " style="-fx-font-weight: bold; -fx-fill: white; -fx-font-size:18px"/>
                  <TextFlow style="-fx-background-radius: 10px; -fx-padding: 10px 10px 20px 10px; -fx-border-color: transparent transparent grey transparent; -fx-border-width: 0 0 1px 0;">
                    <Text text="You don't have to memorise these, we'll remind you where they're relevant but we recommend that you read these before diving into our commands!" style=" -fx-fill: white; -fx-font-size:14px"/>
                  </TextFlow>
                  <TextFlow>
                    <Text text="• " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="Words in " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="UPPER_CASE" style="-fx-fill: #79b8ff; -fx-font-family: 'DejaVu Sans'; -fx-font-size:14px"/>
                    <Text text=" are parameters to be supplied." style="-fx-fill: white; -fx-font-size:14px"/>
                  </TextFlow>
                  <TextFlow style="-fx-padding: 0 0 0 15px;">
                    <Text text="e.g. in " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="add n/NAME" style="-fx-fill: #79b8ff; -fx-font-family: 'DejaVu Sans'; -fx-font-size:14px"/>
                    <Text text=", use " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="add n/John Doe" style="-fx-fill: #79b8ff; -fx-font-family: 'DejaVu Sans'; -fx-font-size:14px"/>
                  </TextFlow>

                  <TextFlow>
                    <Text text="• " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="Items in " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="[square brackets]" style="-fx-fill: #79b8ff; -fx-font-family: 'DejaVu Sans'; -fx-font-size:14px"/>
                    <Text text=" are optional." style="-fx-fill: white; -fx-font-size:14px"/>
                  </TextFlow>
                  <TextFlow style="-fx-padding: 0 0 0 15px;">
                    <Text text="e.g. " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="n/NAME [e/EMAIL]" style="-fx-fill: #79b8ff; -fx-font-family: 'DejaVu Sans'; -fx-font-size:14px"/>
                    <Text text=" can be used with or without email" style="-fx-fill: white; -fx-font-size:14px"/>
                  </TextFlow>

                  <TextFlow>
                    <Text text="• " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="Items with " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="…" style="-fx-fill: #79b8ff; -fx-font-family: 'DejaVu Sans'; -fx-font-size:14px"/>
                    <Text text=" can accept multiple values." style="-fx-fill: white; -fx-font-size:14px"/>
                  </TextFlow>
                  <TextFlow style="-fx-padding: 0 0 0 15px;">
                    <Text text="e.g. " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="delete…" style="-fx-fill: #79b8ff; -fx-font-family: 'DejaVu Sans'; -fx-font-size:14px"/>
                    <Text text=" can delete one or multiple contacts." style="-fx-fill: white; -fx-font-size:14px"/>
                  </TextFlow>

                  <TextFlow>
                    <Text text="• " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="Parameters can be in any order." style="-fx-fill: white; -fx-font-size:14px"/>
                  </TextFlow>

                  <TextFlow>
                    <Text text="• " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="Extraneous parameters for simple commands (" style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="help" style="-fx-fill: #79b8ff; -fx-font-family: 'DejaVu Sans'; -fx-font-size:14px"/>
                    <Text text="and " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="exit" style="-fx-fill: #79b8ff; -fx-font-family: 'DejaVu Sans'; -fx-font-size:14px"/>
                    <Text text=") are ignored." style="-fx-fill: white; -fx-font-size:14px"/>
                  </TextFlow>
                  <TextFlow style="-fx-padding: 0 0 0 15px;">
                    <Text text="e.g. " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="help 12345" style="-fx-fill: #79b8ff; -fx-font-family: 'DejaVu Sans'; -fx-font-size:14px"/>
                    <Text text=" is interpreted as " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="help" style="-fx-fill: #79b8ff; -fx-font-family: 'DejaVu Sans'; -fx-font-size:14px"/>
                  </TextFlow>

                  <TextFlow>
                    <Text text="• " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="Certain commands will request for confirmation before executed. These commands require user confirmation before they can proceed." style="-fx-fill: white; -fx-font-size:14px"/>
                  </TextFlow>
                  <TextFlow style="-fx-padding: 0 0 0 15px;">
                    <Text text="e.g. " style="-fx-fill: white; -fx-font-size:14px"/>
                    <Text text="delete 1" style="-fx-fill: #79b8ff; -fx-font-family: 'DejaVu Sans'; -fx-font-size:14px"/>
                    <Text text=" will request for confirmation before proceeding " style="-fx-fill: white; -fx-font-size:14px"/>
                  </TextFlow>

                  <!-- Pro Tip: Command History Block -->
                  <VBox style="-fx-background-color: #2a3b4d; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #4a6b8a; -fx-border-radius: 8; -fx-border-width: 1;">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                      <!-- Sparkle Icon -->
                      <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                        <Image url="@/images/icons8-sparkling-48.png"/>
                      </ImageView>
                      <Text text="PRO TIP!" style="-fx-fill: #6bb9f0; -fx-font-weight: bold; -fx-font-size: 14;"/>
                    </HBox>

                    <TextFlow styleClass="paragraph" style="-fx-padding: 8 0 0 0;">
                      <Text text="Quickly recall commands by pressing " style="-fx-fill: #e0e0e0; -fx-font-size: 14;"/>
                      <Text text="↑/↓ arrow keys" style="-fx-fill: #f9d423; -fx-font-weight: bold; -fx-font-family: 'Consolas'; -fx-font-size: 14;"/>
                      <Text text=" in the command box!" style="-fx-fill: #e0e0e0; -fx-font-size: 14;"/>
                    </TextFlow>

                    <TextFlow styleClass="paragraph" style="-fx-padding: 4 0 0 0;">
                      <Text text="Saves time when repeating or modifying previous commands." style="-fx-fill: #a0a0a0; -fx-font-style: italic; -fx-font-size: 12;"/>
                    </TextFlow>
                  </VBox>
                </VBox>
              </HBox>

              <!-- add Command -->
              <VBox styleClass="paragraph-container">
                <TextFlow style="-fx-background-radius: 10px; -fx-padding: 10px 10px 20px 10px; -fx-border-color: transparent transparent grey transparent; -fx-border-width: 0 0 1px 0;">
                  <Text text="add" style="-fx-fill: white; -fx-font-weight: bold; -fx-font-size: 30px"/>
                </TextFlow>

                <TextFlow styleClass="paragraph">
                  <Text text="Syntax: " style="-fx-fill: white; -fx-font-weight: bold;"/>
                  <Text text="add n/NAME [p/PHONE_NUMBER] [e/EMAIL] [a/ADDRESS] [r/RELATIONSHIP] [nn/NICKNAME] [b/BIRTHDAY] [no/NOTES] [img/IMAGE_PATH] [t/TAG]…​" styleClass="code-block"/>
                </TextFlow>
                <VBox spacing="20" alignment="CENTER_LEFT">
                  <TextFlow styleClass="paragraph">
                    <Text text="Description: " style="-fx-fill: white; -fx-font-weight: bold;"/>
                    <Text text="The add command adds a contact to the address book. When using add, ensure that all fields are indicated with their respective flag (for example: add n/John Doe... adds a contact with the name John Doe)." style="-fx-fill: white;"/>
                  </TextFlow>

                  <!-- Requirements Section -->
                  <TextFlow styleClass="paragraph">
                    <Text text="Name Requirements:" style="-fx-fill: white; -fx-font-weight: bold;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="Must start with a letter (A-Z, a-z)." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="Cannot end with a special character (@, ., -, etc.)." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="No consecutive special characters (e.g., --, @@, ..)." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="Maximum length of 150 characters." style="-fx-fill: white;"/>
                  </TextFlow>

                  <!-- Note Section Block -->
                  <HBox spacing="10"  styleClass="note-box">
                    <!-- Lightbulb Icon -->
                    <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                      <Image url="@/images/icons8-lightbulb.png"/>
                    </ImageView>
                    <!-- Note Content -->
                    <VBox  spacing="5">
                      <Text text="Note:" style="-fx-font-weight: bold; -fx-fill: white; -fx-font-size:18px"/>
                      <TextFlow>
                        <Text text="• Fields indicated in brackets are optional, like [r/RELATIONSHIP]. This means that you can add a contact without indicating a relationship." style="-fx-fill: white; -fx-font-size:14px"/>
                      </TextFlow>
                      <TextFlow>
                        <Text text="• You can add multiple tags to a contact." style="-fx-fill: white; -fx-font-size:14px"/>
                      </TextFlow>
                      <TextFlow>
                        <Text text="• Only " style="-fx-fill: white; -fx-font-size:14px"/>
                        <Text text=".png" style="-fx-fill: white; -fx-font-size:14px; -fx-font-family: 'DejaVu Sans';"/>
                        <Text text=" images are allowed." style="-fx-fill: white; -fx-font-size:14px"/>
                      </TextFlow>
                      <TextFlow>
                        <Text text="• All " style="-fx-fill: white; -fx-font-size:14px"/>
                        <Text text="/" style="-fx-fill: white; -fx-font-size:14px; -fx-font-family: 'DejaVu Sans';"/>
                        <Text text=" characters must be escaped with " style="-fx-fill: white; -fx-font-size:14px"/>
                        <Text text="\\" style="-fx-fill: white; -fx-font-size:14px; -fx-font-family: 'DejaVu Sans';"/>
                        <Text text=" to be recognized correctly." style="-fx-fill: white; -fx-font-size:14px"/>
                      </TextFlow>
                      <TextFlow>
                        <Text text="  e.g. To include " style="-fx-fill: white; -fx-font-size:14px"/>
                        <Text text="s/o" style="-fx-fill: white; -fx-font-size:14px; -fx-font-family: 'DejaVu Sans';"/>
                        <Text text=" in a name, type it as " style="-fx-fill: white; -fx-font-size:14px"/>
                        <Text text="s\/o" style="-fx-fill: white; -fx-font-size:14px; -fx-font-family: 'DejaVu Sans';"/>
                      </TextFlow>
                    </VBox>
                  </HBox>

                  <!-- Example Block -->
                  <TextFlow styleClass="paragraph">
                    <Text text="Example: " style="-fx-fill: white; -fx-font-weight: bold;"  wrappingWidth="200"/>
                    <Text text="add n/Nickie p/88888888 r/son e/nickie@gmail.com a/21 Lower Kent Ridge Rd, Singapore 119077 nn/nickelodeon b/01-01-2001 img/C:/Nickie.png no/My favorite son" styleClass="code-block"/>
                  </TextFlow>
                </VBox>
              </VBox>

              <!-- delete Command -->
              <VBox styleClass="paragraph-container">
                <TextFlow style="-fx-background-radius: 10px; -fx-padding: 10px 10px 20px 10px; -fx-border-color: transparent transparent grey transparent; -fx-border-width: 0 0 1px 0;">
                  <Text text="delete" style="-fx-fill: white; -fx-font-weight: bold; -fx-font-size: 30px"/>
                </TextFlow>

                <TextFlow styleClass="paragraph">
                  <Text text="Syntax: " style="-fx-fill: white; -fx-font-weight: bold;"/>
                  <Text text="delete INDEX…​" styleClass="code-block"/>
                </TextFlow>

                <VBox spacing="20" alignment="CENTER_LEFT">
                  <TextFlow styleClass="paragraph">
                    <Text text="Description: " style="-fx-fill: white; -fx-font-weight: bold;"/>
                    <Text text="Deletes the specified person(s) from the address book." style="-fx-fill: white;"/>
                  </TextFlow>

                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="Deletes the person(s) at the specified " style="-fx-fill: white;"/>
                    <Text text="INDEX" style="-fx-fill: white; -fx-font-weight: bold;"/>
                    <Text text=" values." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="The index refers to the index number shown in the displayed person list." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="The index " style="-fx-fill: white;"/>
                    <Text text="must be a positive integer" style="-fx-fill: white; -fx-font-weight: bold;"/>
                    <Text text=" (e.g., 1, 2, 3, …)." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="Supports deleting multiple people at once (e.g., " style="-fx-fill: white;"/>
                    <Text text="delete 1 2 4" style="-fx-fill: white; -fx-font-family: 'DejaVu Sans';"/>
                    <Text text=")." style="-fx-fill: white;"/>
                  </TextFlow>

                  <!-- Note Section Block -->
                  <HBox spacing="10"  styleClass="note-box">
                    <!-- Lightbulb Icon -->
                    <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                      <Image url="@/images/icons8-lightbulb.png"/>
                    </ImageView>
                    <!-- Note Content -->
                    <VBox  spacing="5">
                      <Text text="Note:" style="-fx-font-weight: bold; -fx-fill: white; -fx-font-size:18px"/>
                      <TextFlow>
                        <Text text="• Use " style="-fx-fill: white; -fx-font-size:14px"/>
                        <Text text="list" style="-fx-fill: white; -fx-font-size:14px; -fx-font-family: 'DejaVu Sans';"/>
                        <Text text=" or " style="-fx-fill: white; -fx-font-size:14px"/>
                        <Text text="find" style="-fx-fill: white; -fx-font-size:14px; -fx-font-family: 'DejaVu Sans';"/>
                        <Text text=" commands first to verify the indexes before deleting." style="-fx-fill: white; -fx-font-size:14px"/>
                      </TextFlow>
                      <TextFlow>
                        <Text text="• Deleted contacts can be recovered using " style="-fx-fill: white; -fx-font-size:14px"/>
                        <Text text="undo" style="-fx-fill: white; -fx-font-size:14px; -fx-font-family: 'DejaVu Sans';"/>
                        <Text text="." style="-fx-fill: white; -fx-font-size:14px"/>
                      </TextFlow>
                    </VBox>
                  </HBox>

                  <!-- Example Block -->
                  <TextFlow styleClass="paragraph">
                    <Text text="Examples: " style="-fx-fill: white; -fx-font-weight: bold;" wrappingWidth="200"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="list" styleClass="code-block"/>
                    <Text text=" followed by " style="-fx-fill: white;"/>
                    <Text text="delete 2" styleClass="code-block"/>
                    <Text text=" deletes the 2nd person in the address book." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="find Betsy" styleClass="code-block"/>
                    <Text text=" followed by " style="-fx-fill: white;"/>
                    <Text text="delete 1 3" styleClass="code-block"/>
                    <Text text=" deletes the 1st and 3rd persons in the results of the " style="-fx-fill: white;"/>
                    <Text text="find" style="-fx-fill: white; -fx-font-family: 'DejaVu Sans';"/>
                    <Text text=" command." style="-fx-fill: white;"/>
                  </TextFlow>
                </VBox>
              </VBox>

              <!-- edit Command -->
              <VBox styleClass="paragraph-container">
                <TextFlow style="-fx-background-radius: 10px; -fx-padding: 10px 10px 20px 10px; -fx-border-color: transparent transparent grey transparent; -fx-border-width: 0 0 1px 0;">
                  <Text text="edit" style="-fx-fill: white; -fx-font-weight: bold; -fx-font-size: 30px"/>
                </TextFlow>

                <TextFlow styleClass="paragraph">
                  <Text text="Syntax: " style="-fx-fill: white; -fx-font-weight: bold;"/>
                  <Text text="edit INDEX [n/NAME] [p/PHONE_NUMBER] [e/EMAIL] [a/ADDRESS] [r/RELATIONSHIP] [nn/NICKNAME] [b/BIRTHDAY] [no/NOTES] [t/TAG]…​" styleClass="code-block"/>
                </TextFlow>

                <VBox spacing="20" alignment="CENTER_LEFT">
                  <TextFlow styleClass="paragraph">
                    <Text text="Description: " style="-fx-fill: white; -fx-font-weight: bold;"/>
                    <Text text="Edits an existing person in the address book." style="-fx-fill: white;"/>
                  </TextFlow>

                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="Edits the person at the specified " style="-fx-fill: white;"/>
                    <Text text="INDEX" style="-fx-fill: white; -fx-font-weight: bold;"/>
                    <Text text=". The index refers to the index number shown in the displayed person list. The index " style="-fx-fill: white;"/>
                    <Text text="must be a positive integer." style="-fx-fill: white; -fx-font-weight: bold;"/></TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="At least one of the optional fields must be provided." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="Existing values will be updated to the input values." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="When editing tags, the existing tags of the person will be removed i.e adding of tags is not cumulative." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="You can remove all a contact's tags by typing " style="-fx-fill: white;"/>
                    <Text text="t/" style="-fx-fill: white; -fx-font-family: 'DejaVu Sans';"/>
                    <Text text=" without specifying any tags after it." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="Note this command can be undone using " style="-fx-fill: white;"/>
                    <Text text="undo" style="-fx-fill: white; -fx-font-family: 'DejaVu Sans';"/>
                    <Text text=" in order to revert edits you just made." style="-fx-fill: white;"/>
                  </TextFlow>

                  <!-- Note Section Block -->
                  <HBox spacing="10"  styleClass="note-box">
                    <!-- Lightbulb Icon -->
                    <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                      <Image url="@/images/icons8-lightbulb.png"/>
                    </ImageView>
                    <!-- Note Content -->
                    <VBox  spacing="5">
                      <Text text="Note:" style="-fx-font-weight: bold; -fx-fill: white; -fx-font-size:18px"/>
                      <TextFlow>
                        <Text text="• The edit command only changes the fields you specify - other fields remain unchanged." style="-fx-fill: white; -fx-font-size:14px"/>
                      </TextFlow>
                    </VBox>
                  </HBox>

                  <!-- Example Block -->
                  <TextFlow styleClass="paragraph">
                    <Text text="Examples: " style="-fx-fill: white; -fx-font-weight: bold;" wrappingWidth="200"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="edit 1 p/91234567 e/johndoe@example.com" styleClass="code-block"/>
                    <Text text=" - Edits the phone number and email address of the 1st person." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="edit 2 n/Betsy Crower t/" styleClass="code-block"/>
                    <Text text=" - Edits the name of the 2nd person and clears all tags." style="-fx-fill: white;"/>
                  </TextFlow>
                </VBox>
              </VBox>

              <!-- undo Command -->
              <VBox styleClass="paragraph-container">
                <TextFlow style="-fx-background-radius: 10px; -fx-padding: 10px 10px 20px 10px; -fx-border-color: transparent transparent grey transparent; -fx-border-width: 0 0 1px 0;">
                  <Text text="undo" style="-fx-fill: white; -fx-font-weight: bold; -fx-font-size: 30px"/>
                </TextFlow>

                <TextFlow styleClass="paragraph">
                  <Text text="Syntax: " style="-fx-fill: white; -fx-font-weight: bold;"/>
                  <Text text="undo" styleClass="code-block"/>
                </TextFlow>

                <VBox spacing="20" alignment="CENTER_LEFT">
                  <TextFlow styleClass="paragraph">
                    <Text text="Description: " style="-fx-fill: white; -fx-font-weight: bold;"/>
                    <Text text="Reverts the address book to its previous state." style="-fx-fill: white;"/>
                  </TextFlow>

                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="Reverses the most recent change made to the address book." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="Works by reverting to a previously saved state in the command history." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="Will display " style="-fx-fill: white;"/>
                    <Text text="Nothing to undo!" style="-fx-fill: white; -fx-font-weight: bold; -fx-font-family: 'DejaVu Sans';"/>
                    <Text text=" if there are no changes to reverse." style="-fx-fill: white;"/>
                  </TextFlow>
                  <TextFlow styleClass="paragraph">
                    <Text text="• " style="-fx-fill: white;"/>
                    <Text text="Only affects changes made since the last app launch." style="-fx-fill: white;"/>
                  </TextFlow>

                  <!-- Note Section Block -->
                  <HBox spacing="10"  styleClass="note-box">
                    <!-- Lightbulb Icon -->
                    <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                      <Image url="@/images/icons8-lightbulb.png"/>
                    </ImageView>
                    <!-- Note Content -->
                    <VBox  spacing="5">
                      <Text text="Note:" style="-fx-font-weight: bold; -fx-fill: white; -fx-font-size:18px"/>
                      <TextFlow>
                        <Text text="• Undo works linearly - it can only reverse the most recent command." style="-fx-fill: white; -fx-font-size:14px"/>
                      </TextFlow>
                      <TextFlow>
                        <Text text="• The undo/redo history does not persist when the application is closed." style="-fx-fill: white; -fx-font-size:14px"/>
                      </TextFlow>
                    </VBox>
                  </HBox>

                  <!-- Warning Block -->
                  <HBox spacing="10"  styleClass="note-box" style="-fx-background-color: #751d1d;">
                    <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                      <Image url="@/images/icons8-warning.png"/>
                    </ImageView>
